<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="1dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">
        <RatingBar
            android:id="@+id/rbUserCommentaryRating"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginVertical="4dp"
            android:progressTint="@color/g_orange_yellow"
            android:progressBackgroundTint="@color/flat_grey_light_1"
            android:stepSize="1"
            android:rating="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvUserNameCommentary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre skfjdnsd"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/verified_user"
                android:layout_gravity="bottom"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/g_gray700"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvUserCommentaryData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:text="hola, me encantó este producto, es buenísimo y genial para los tilines"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>