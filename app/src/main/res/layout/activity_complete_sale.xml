<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CompleteSaleActivity"
    tools:openDrawer="start"
    android:id="@+id/drawerLayoutCompleteSale">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvBusinessData"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="16dp"
            app:cardForegroundColor="#00FFFFFF"
            app:checkedIconTint="#FFFFFF"
            app:strokeColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:strokeWidth="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingVertical="18dp">

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"

                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:text="Shirley Rivadeneira"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOwnerAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_numbers"
                    android:drawablePadding="10dp"
                    android:text="1718299603 "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOwnerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:text="shirley.r_mj@hotmail.com"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOwnerBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_bank"
                    android:drawablePadding="10dp"
                    android:text="Banco Pichincha"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvOwnerIdentification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="10dp"
                    android:text="2209757370"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvOrderTotal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="16dp"
            app:cardForegroundColor="#00FFFFFF"
            app:checkedIconTint="#FFFFFF"
            app:strokeColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mcvBusinessData"
            app:strokeWidth="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingVertical="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="0"
                        android:paddingVertical="4dp"
                        android:text="Total:"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tvTotalSalePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:paddingVertical="4dp"
                        android:text="$00.00"
                        android:textAlignment="textEnd"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/etOrderAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="22sp"
                    android:hint="Dirección: " />

                <EditText
                    android:id="@+id/etOrderDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="22sp"
                    android:hint="Descripción: " />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAcceptSale"
                    style="@style/btnsLoginRegister"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Enviar Orden"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textSize="25sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav_complete_Sale"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/bottom_maenu_bar"
            app:itemTextColor="@color/black"
            app:itemIconTint="@drawable/bottom_item_selected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/black" />


    </androidx.constraintlayout.widget.ConstraintLayout>

