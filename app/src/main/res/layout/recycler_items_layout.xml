<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgFilterClothes"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="@id/guidelineTop">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEmbroid"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Bordado"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrint"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Estampado"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Todos"
            android:textAlignment="center" />

    </com.google.android.material.chip.ChipGroup>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductsDash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cgFilterClothes"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"/>




    <!-- GUIDELINES -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="667dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

</androidx.constraintlayout.widget.ConstraintLayout>