<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PasswordsActivity">

    <!-- LOGO -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineTop"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/logosaturninacolores"
            app:layout_constraintBottom_toTopOf="@id/guidelineTop"
            android:layout_marginRight="35dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturnina"
            android:textSize="30sp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llInformativeTextsPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vamos!!"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tusCredenciales"
            android:textSize="20sp" />

    </LinearLayout>



    <EditText
        android:id="@+id/etEmailPass"
        android:layout_width="316dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llInformativeTextsPass"
        android:layout_marginTop="20dp"
        style="@style/editText"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textAlignment="textStart"
        android:paddingStart="15dp"/>

    <EditText
        android:id="@+id/etPasswordPass"
        android:layout_width="316dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmailPass"
        android:layout_marginTop="15dp"
        style="@style/editText"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:paddingStart="15dp"/>

    <CheckBox
        android:id="@+id/cbFirstPassword"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="18dp"
        android:checked="false"
        android:button="@drawable/cb_custom"
        android:buttonTint="@color/g_red"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/etPasswordPass"
        app:layout_constraintEnd_toEndOf="@id/etPasswordPass"
        app:layout_constraintTop_toTopOf="@id/etPasswordPass"/>

    <EditText
        android:id="@+id/etConfirmPasswordPass"
        android:layout_width="316dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPasswordPass"
        android:layout_marginTop="15dp"
        style="@style/editText"
        android:hint="Confirma tu contraseña"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:paddingStart="15dp"/>


    <CheckBox
        android:id="@+id/cbSecondPassword"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="18dp"
        android:checked="false"
        android:button="@drawable/cb_custom"
        android:buttonTint="@color/g_red"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/etConfirmPasswordPass"
        app:layout_constraintEnd_toEndOf="@id/etConfirmPasswordPass"
        app:layout_constraintTop_toTopOf="@id/etConfirmPasswordPass"/>



    <!-- BUTTON TO PASSWORDS ACTIVITY -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPasswordPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuardarPass"
            style="@style/btnsLoginRegister"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:paddingHorizontal="20dp"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegresarPass"
            style="@style/btnsLoginRegister"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:paddingHorizontal="20dp"
            android:text="Atras"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textSize="30sp" />

    </LinearLayout>



    <!-- CIRCLES -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/circle_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:translationX="50dp"
        android:translationY="-50dp"/>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/circle_bottom"
        app:layout_constraintTop_toTopOf="@id/guidelineBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        android:translationX="-60dp"/>




    <!-- GUIDELINES -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />


</androidx.constraintlayout.widget.ConstraintLayout>